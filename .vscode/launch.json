    "version": "0.2.0",
    "configurations": [
        {
            "name": "Load from gform",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "console": "externalTerminal",
            "justMyCode": true,
            "args": [
                "-f", "${workspaceFolder}/tests/gform/sample.xlsx",
                "-o", "${workspaceFolder}/local",
                "-k", "gform-loading",
                "--gform"
            ]
        },
        {
            "name": "Load from xls file",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "console": "externalTerminal",
            "justMyCode": true,
            "args": [
                "-f", "${workspaceFolder}/tests/xls/Респондент 020.xlsx",
                "-o", "${workspaceFolder}/local",
                "-k", "xls-loading",
                "--xls"
            ]
        },
        {
            "name": "Load from xls directory",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "console": "externalTerminal",
            "justMyCode": true,
            "args": [
                "-d", "${workspaceFolder}/tests/xls",
                "-o", "${workspaceFolder}/local",
                "-k", "xls-loading",
                "--xls"
            ]
        }
    ]
}